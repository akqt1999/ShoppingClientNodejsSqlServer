<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_login"
        android:padding="10dp"
        android:text="xác nhận mua hàng"
        android:textColor="@color/black"
        android:textSize="21dp"
        android:textStyle="bold"
        />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">





</LinearLayout>




<Button
    android:text="Thêm đia chỉ mới"
    android:textAllCaps="false"
    android:id="@+id/btn_add_new_address"
    android:layout_margin="9dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="địa chỉ giao hàng"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/txt_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="chưa chọn địa chỉ"
        android:textColor="@color/black"
        android:textSize="19dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Tổng tiền"
        android:textColor="@color/black"
        android:textSize="19dp" />
    <TextView
        android:id="@+id/txt_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="9.000.000"
        android:textColor="@color/black"
        android:textSize="19dp" />

    <Button
        android:id="@+id/btn_confirm_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="mua hàng"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btn_cancel123"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="cancel"
        android:textColor="@color/black" />

</LinearLayout>